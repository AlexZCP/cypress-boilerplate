{
  "name": "cypress-tests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cypress open",
    "silent": "cypress run",
    "quiet": "cypress run --quiet",
    "silent:api": "cypress run --reporter progress --spec 'cypress/integration/api-tests/**/*'",
    "ui-tests": "cypress run --reporter progress --spec 'cypress/integration/ui-tests/**/*'",
    "log-report-to-file": "cypress run --quiet 1> test-results.txt || true && sh echo_message.sh ",
    "clean:reports": "rm -R -f cypress/reports && mkdir cypress/reports && mkdir cypress/reports/mochareports",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test-with-report": "npm run clean:reports && npm run log-report-to-file &&  npm run posttest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cypress": "^9.6.0",
    "cypress-localstorage-commands": "^1.7.0",
    "puppeteer": "^13.7.0"
  },
  "devDependencies": {
    "cypress-mochawesome-reporter": "^3.0.1",
    "cypress-multi-reporters": "^1.6.0",
    "mocha": "^10.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.2.0"
  }
}
